theme = TokyoNight
font-family = JetBrains Mono
#font-family = MesloLGS NF
font-size = 15
background-opacity = 0.9
background-blur-radius = 12
# Padding — 각 pane 간 여백 강조
window-padding-x = 12
window-padding-y = 12




# Split divider color (구분선 강조)
split-divider-color = "#44475a"

# 활성화되지 않은 분할 창(split)의 투명도 설정 (예: 70%)
unfocused-split-opacity = 0.3
# 분할 창 사이의 구분선 색상 (더 명확하게 구분하고 싶을 때)
window-colorspace = "display-p3"

# Option 키를 Alt(Meta) 키로 작동하게 설정
macos-option-as-alt = true


# 처음 실행될 때의 크기를 직접 지정 (예: 120 x 35)
window-width = 180
window-height = 50

# 이후의 상태 저장을 시도
window-save-state = "default"

